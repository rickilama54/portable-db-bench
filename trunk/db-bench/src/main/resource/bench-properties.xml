		<test name="Telephone company use case">
			<initializator name="AccountInitializator" numberOfObjects="1000000"/>
			<initializator name="MsisdnInitializator" numberOfObjects="1000000"/>
			<initializator name="SessionInitializator" numberOfObjects="1000000"/>
			<task tps="10" time="120000" name="Check balance">
				<operation name="ReadMsisdnOperation" repetition="1"/>
				<operation name="ReadAccountOperation" repetition="1"/>						
			</task>	
			<task tps="10" time="120000" name="Account creation"> 
				<operation name="WriteAccountOperation" repetition="1"/>
				<operation name="WriteMsisdnOperation" repetition="2"/>				
			</task>				
			<task tps="2000" time="120000" name="Start call">
				<operation name="ReadMsisdnOperation" repetition="1"/>
				<operation name="ReadAccountOperation" repetition="1"/>					
				<operation name="WriteSessionOperation" repetition="1"/>				
			</task>	
			<loggraphreporter name="check balance transactions">
				<line x="Time" xTask="Check balance" y="Transaction" yTask="Check balance" name="Transactions"/>
			</loggraphreporter>
			<loggraphreporter name="check balance AVG transactions">
				<line x="Time" xTask="Check balance" y="AvgTransaction" yTask="Check balance" name="AVG"/>						
			</loggraphreporter>
			<loggraphreporter name="account creation transactions">
				<line x="Time" xTask="Account creation" y="Transaction" yTask="Account creation" name="Transactions"/>
			</loggraphreporter>
			<loggraphreporter name="account creation AVG transactions">
				<line x="Time" xTask="Account creation" y="AvgTransaction" yTask="Account creation" name="AVG"/>					
			</loggraphreporter>
			<loggraphreporter name="start call transactions">
				<line x="Time" xTask="Start call" y="Transaction" yTask="Start call" name="Transactions"/>				
			</loggraphreporter>
			<loggraphreporter name="start call AVG transactions">
				<line x="Time" xTask="Start call" y="AvgTransaction" yTask="Start call" name="AVG"/>
			</loggraphreporter>
			<lineargraphreporter name="memory usage">
				<line x="Time" y="Memory" name="Memory"/>		
			</lineargraphreporter>
			<lineargraphreporter name="cpu usage">
				<line x="Time" y="Cpu" name="cpu"/>
			</lineargraphreporter>		
		</test>		
	
		<test name="Memory and Trend Transaction Test (fixed total number of transaction)">								
			<initializator name="SessionInitializator" numberOfObjects="1000000"/>
			<task transaction="1000000" time="120000" name="Generic Writer Task">
				<operation name="WriteSessionOperation" repetition="1"/>
			</task>	
			<loggraphreporter name="Race">
				<line x="Time" xTask="Generic Writer Task" y="TotalTransaction" yTask="Generic Writer Task" name="transaction"/>		
			</loggraphreporter>		
			<lineargraphreporter name="Memory usage">
				<line x="TotalTransaction" xTask="Generic Writer Task" y="Memory" name="memory"/>		
			</lineargraphreporter>	
			<loggraphreporter name="Transaction per objects inserted">
				<line x="TotalTransaction" xTask="Generic Writer Task" y="Transaction" yTask="Generic Writer Task" name="Transactions"/>		
			</loggraphreporter>	
		</test>	
		
		<test name="Cpu usage test (constant transaction per second)">								
			<initializator name="SessionInitializator" numberOfObjects="1000000"/>
			<task tps="200" time="60000" name="Generic Writer Task">
				<operation name="WriteSessionOperation" repetition="1"/>
			</task>		
			<lineargraphreporter name="Cpu usage">
				<line x="Time" xTask="Generic Writer Task" y="Cpu" name="cpu"/>		
			</lineargraphreporter>
			<lineargraphreporter name="Memory usage">
				<line x="TotalTransaction" xTask="Generic Writer Task" y="Memory" name="memory"/>		
			</lineargraphreporter>	
			<lineargraphreporter name="Transaction per objects inserted">
				<line x="Time" xTask="Generic Writer Task" y="Transaction" yTask="Generic Writer Task" name="Transactions"/>		
			</lineargraphreporter>	
		</test>					
	<!-- -->
	</tests>
