<bench>
	
	<!-- DEFINITIONS -->
    <definitions>
    	<!-- inizializators -->
    	<initializator name="Pippo" class="com.eris4....."/>    	
    	<!-- monitors -->
    	<monitor name="TransactionMonitor" class="com.TransactionMonitor"/>
    	<monitor name="TimeMonitor" class="com.TimeMonitor"/>
    	<!-- operations -->
    	<operation name="MaxWriteTest" class="com.MaxWriteTest"/>
	</definitions>
	
	<!-- DATABASE LIST -->
	<databases>
		<database class="com.eris4.benchdb.database.pico4.Pico4Database"/>
		<database class="com.eris4.benchdb.database.prevayler.PrevaylerDatabase"/>
	</databases>
		
	<!-- TEST LIST -->
	<!-- esempio TimedSpeedTest multioperation -->
	<tests>
		<test time="15000" >
			<initializator name="Pippo" numberOfObjects="1000"/>					
			<task>	
				<operation name="MaxWriteTest" repetition="1"/>
				<operation name="MaxReadTest" repetition="2"/>			
			</task>
			<monitor name="TimeMonitor"/>
			<monitor name="FileMonitor"/>
			<monitor name="TransactionMonitor"/>
		</test>
		
		<!-- esempio TimedSpeedTest concorrente -->
		<test time="15000" >
			<initializator name="Pippo" numberOfObjects="1000"/>	
			<task>	
				<operation name="MaxWriteTest"/>					
			</task>
			<task>
				<operation name="MaxReadTest"/>			
			</task>
			<monitor name="TimeMonitor"/>
			<monitor name="FileMonitor"/>
			<monitor name="TransactionMonitor"/>
		</test>
		
		<!-- esempio TimedLoadTest concorrente -->
		<test time="15000" >
			<initializator name="Pippo" numberOfObjects="1000"/>	
			<task tps="1000">	
				<operation name="MaxWriteTest"/>					
			</task>
			<task tps="2000">
				<operation name="MaxReadTest"/>			
			</task>
			<monitor name="TimeMonitor"/>
			<monitor name="FileMonitor"/>
			<monitor name="TransactionMonitor"/>
		</test>
	</tests>
</bench>